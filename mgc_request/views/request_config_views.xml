<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--Request Type-->
                <record id="account_request_type_form_view" model="ir.ui.view">
            <field name="name">account.request.type.form</field>
            <field name="model">account.request.type</field>
            <field name="arch" type="xml">
                <form string="Request Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" nolabel="1" placeholder="e.g. Cash"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="request_company_id" options="{'no_create':True}"/>
                                <field name="request_department_id"  domain="[('request_company_id', '=', request_company_id)]" options="{'no_create':True}"/>
                                <field name="type"/>
                                <field name="code"/>
                                <field name="active"/>
                                <field name="company_id" invisible="1"/>
                                <field name="department_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Request Line">
                                <field name="type_line">
                                    <tree string="Request Line">
                                        <field name="request_type_id" invisible="1"/>
                                        <field name="name" required="1"/>
                                        <field name="date_effectivity" required="1"/>
                                        <field name="source_id" required="1" options="{'no_create':True}"/>
                                        <field name="sub_code" required="1"/>
                                        <field name="active"/>
                                    </tree>
                                    <form string="Request Line">
                                        <sheet>
                                            <div class="oe_title">
                                                <label for="name" class="oe_edit_only"/>
                                                <h2><field name="name" nolabel="1" placeholder="Bring here the sub request!"/></h2>
                                            </div>
                                            <group>
                                                <group>
                                                    <field name="date_effectivity"/>
                                                    <field name="source_id" required="1" options="{'no_create':True}"/>
                                                    <field name="sub_code" required="1"/>
                                                </group>
                                                <group>
                                                    <field name="request_company_id" readonly="1"/>
                                                    <field name="request_department_id" readonly="1"/>
                                                    <field name="active" readonly="1"/>
                                                    <field name="company_id" invisible="1"/>
                                                    <field name="department_id" invisible="1"/>
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Approvals">
                                                    <field name="approval_ids">
                                                        <tree string="Approval" editable="bottom">
                                                            <field name="position_id" required="1"/>
                                                            <field name="amount" required="1"/>
                                                            <field name="priority" required="1"/>
                                                            <field name="request_type_line_id" invisible="1"/>
                                                        </tree>
                                                        <form string="">
                                                            <sheet>
                                                                <group>
                                                                    <group>
                                                                        <field name="position_id" readonly="1"/>
                                                                        <field name="amount" readonly="1"/>
                                                                        <field name="priority" readonly="1"/>
                                                                        <field name="request_type_line_id" invisible="1"/>
                                                                    </group>
                                                                </group>
                                                            </sheet>
                                                        </form>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_request_type_tree_view" model="ir.ui.view">
            <field name="name">account.request.type.tree</field>
            <field name="model">account.request.type</field>
            <field name="arch" type="xml">
                <tree string="Request Type">
                    <field name="name"/>
                    <field name="request_company_id"/>
                    <field name="request_department_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="account_request_type_filter_view" model="ir.ui.view">
           <field name="name">account.request.type.filter</field>
           <field name="model">account.request.type</field>
            <field name="arch" type="xml">
                <search string="Request Type">
                    <field name="name" string="Name" domain="[('active', '=', True)]"/>
                    <field name="request_company_id"/>
                    <field name="request_department_id"/>
                </search>
           </field>
        </record>

        <record id="account_request_type_action_view" model="ir.actions.act_window">
            <field name="name">Request Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.request.type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create Request Type
              </p>
            </field>
        </record>

        <!--Business Unit-->
        <record id="account_request_company_form_view" model="ir.ui.view">
            <field name="name">account.request.company.form</field>
            <field name="model">account.request.company</field>
            <field name="arch" type="xml">
                <form string="Business Unit">
                    <header>
                        <button name="action_generate_department" type="object" string="Generate Department"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h2><field name="name" nolabel="1"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" options="{'no_create':True}"/>
                                <field name="abbreviation"/>
                                <field name="code"/>
                                <field name="active"/>
                                <field name="is_MSG"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Departments">
                                <field name="department_line_ids" nolabel="1">
                                    <tree string="Department Boards" editable="bottom">
                                        <field name="request_company_id" invisible="1"/>
                                        <field name="department_id" required="True" options="{'no_create':True}" domain="[('company_id', '=', company_id)]"/>
                                        <field name="code" required="1"/>
                                        <field name="active"/>
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                    <form string="Department Boards" edit="false">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="request_company_id" invisible="1"/>
                                                    <field name="department_id" readonly="1"/>
                                                    <field name="code" readonly="1"/>
                                                    <field name="active" readonly="1"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_request_company_tree_view" model="ir.ui.view">
            <field name="name">account.request.company.tree</field>
            <field name="model">account.request.company</field>
            <field name="arch" type="xml">
                <tree string="Business Unit" domain="[('active', '=', True)]">
                    <field name="name"/>
                    <field name="abbreviation"/>
                    <field name="code"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="account_request_company_filter" model="ir.ui.view">
           <field name="name">account.request.company.filter</field>
           <field name="model">account.request.company</field>
            <field name="arch" type="xml">
                <search string="Business Unit">
                    <field name="name" string="Name" domain="[('active', '=', True)]"/>
                    <field name="code" string="Code" domain="[('active', '=', True)]"/>
                    <field name="company_id" string="Company" domain="[('active', '=', True)]"/>
                </search>
            </field>
        </record>

        <record id="account_request_company_action_view" model="ir.actions.act_window">
            <field name="name">Business Unit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.request.company</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                  Create Business Unit!
              </p>
            </field>
        </record>

        <!--Source-->
        <record id="account_request_source_form_view" model="ir.ui.view">
            <field name="name">account.request.source.form</field>
            <field name="model">account.request.source</field>
            <field name="arch" type="xml">
                <form string="Source">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_request_source_tree_view" model="ir.ui.view">
            <field name="name">account.request.source.tree</field>
            <field name="model">account.request.source</field>
            <field name="arch" type="xml">
                <tree string="Source" domain="[('active', '=', True)]">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="account_request_source_filter_view" model="ir.ui.view">
            <field name="name">account.request.source.filter</field>
            <field name="model">account.request.source</field>
            <field name="arch" type="xml">
                <search string="Source">
                    <field name="name" string="Name" domain="[('active', '=', True)]"/>
                </search>
            </field>
        </record>

        <record id="account_request_source_action_view" model="ir.actions.act_window">
            <field name="name">Source</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.request.source</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create source fund for request!
              </p>
            </field>
        </record>

        <record id="account_request_position_form_view" model="ir.ui.view">
            <field name="name">account.request.position.form</field>
            <field name="model">account.request.position</field>
            <field name="arch" type="xml">
                <form string="Position">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" nolabel="1" placeholder="e.g. Position"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="job_id" options="{'no_create':True}"/>
                                <field name="responsible_id" options="{'no_create':True}" domain="[('job_id', '=', job_id)]"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_request_position_tree_view" model="ir.ui.view">
            <field name="name">account.request.position.tree</field>
            <field name="model">account.request.position</field>
            <field name="arch" type="xml">
                <tree string="Position">
                    <field name="name"/>
                    <field name="responsible_id" options="{'no_create':True}"/>
                </tree>
            </field>
        </record>

        <record id="account_request_position_filter_view" model="ir.ui.view">
            <field name="name">account.request.position.filter</field>
            <field name="model">account.request.position</field>
            <field name="arch" type="xml">
                <search string="Position">
                    <field name="name" string="Name"/>
                </search>
           </field>
        </record>

        <record id="account_request_position_action_view" model="ir.actions.act_window">
            <field name="name">Position</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.request.position</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create Your Position Here!
              </p>
            </field>
        </record>

        <record id="mgc_coa_list_action_view" model="ir.actions.act_window">
            <field name="name">COA</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mgc.account_chart.bu</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create Your Position Here!
              </p>
            </field>
        </record>
        <record id="mgc_bran_list_action_view" model="ir.actions.act_window">
            <field name="name">Branches</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mgc.request.bu_branches</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create Your Position Here!
              </p>
            </field>
        </record>
        <record id="mgc_rq_type_list_action_view" model="ir.actions.act_window">
            <field name="name">Request New Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mgc.request.request_types</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create Your Position Here!
              </p>
            </field>
        </record>
    </data>
</odoo>