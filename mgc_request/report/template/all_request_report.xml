<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
         <record id="paperformat_letter_requests" model="report.paperformat">
			 <field name="name">Letter - Request Form</field>
		     <field name="default" eval="False"/>
			 <field name="format">custom</field>
             <field name="page_height">280</field>
             <field name="page_width">216</field>
             <field name="orientation">Portrait</field>
		     <field name="margin_top">24</field>
		     <field name="margin_bottom">28</field>
		     <field name="margin_left">7</field>
		     <field name="margin_right">7</field>
		     <field name="header_line" eval="False"/>
		     <field name="header_spacing">24</field>
		     <field name="dpi">100</field>
		</record>

		<!--Request Legal Paper Format (Landscape)-->
        <record id="paperformat_legal_rf_landscape" model="report.paperformat">
		    <field name="name">Request Landscape Paper Format</field>
		    <field name="default" eval="True"/>
		    <field name="format">Legal</field>
		    <field name="orientation">Landscape</field>
		    <field name="margin_top">24</field>
		    <field name="margin_bottom">26</field>
		    <field name="margin_left">7</field>
		    <field name="margin_right">7</field>
		    <field name="header_line" eval="False"/>
		    <field name="header_spacing">24</field>
		    <field name="dpi">100</field>
		</record>

        <!--Request Form Report-->
        <report
            id="account_request_form"
            model="account.request"
            string="My Request"
            report_type="qweb-pdf"
            name="mgc_request.report_request"
            file="mgc_request.report_request"
            paperformat="paperformat_letter_requests"/>

		<!--Request Form Report Monthly-->
        <report
            id="account_request_monthly"
            model="account.request"
            string="Monthly Request Report"
            report_type="qweb-pdf"
            name="mgc_request.report_request_template"
            file="mgc_request.report_request_template"
            paperformat="paperformat_legal_rf_landscape"/>
    </data>
</odoo>