<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_order_inherited3_form_view" model="ir.ui.view">
            <field name="name">purchase.order.inherited3.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="request_id" domain="[('state', '=', 'done'), ('request_type_id.type', '=', 'purchase'), ('request_company_id', '=', company_id)]"
                           options="{'no_create': True}" class="oe_edit_only"/>
                    <field name="request_origin" attrs="{'readonly':[('state', '=', 'purchase')]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/sheet/group/group/field[@name='company_id']" position="after">
                <field name="request_line_id" invisible="1"/>
                <field name="request_id"/>
            </xpath>
            </field>
        </record>

        <!--Purchase Order Action for traceability -->
        <record id="purchase_orders_action_view" model="ir.actions.act_window">
            <field name="name">Purchase Order</field>
            <field name="res_model">purchase.order</field>
            <field name="view_id" ref="purchase.purchase_order_tree"/>
        </record>
    </data>
</odoo>