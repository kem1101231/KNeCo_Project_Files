<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--Form View-->
        <record id="account_request_form_view" model="ir.ui.view">
            <field name="name">account.request.form</field>
            <field name="model">account.request</field>
            <field name="arch" type="xml">
                <form string="My Request">
                    <header>
                        <button string="Print RF" name="print_request"
                                states="draft,confirmed,print_rf,done" type="object"
                                class="oe_highlight"
                                groups="mgc_request.group_request_employee,mgc_request.group_request_supervisor,mgc_request.group_request_manager"/>

                        <button string="Confirmed" name="action_confirmed"
                                states="print_rf,draft,void" type="object"
                                class="oe_highlight"
                                groups="mgc_request.group_request_supervisor"/>

                        <button string="Done" name="action_done"
                                states="confirmed" type="object"
                                class="oe_highlight"
                                groups="mgc_request.group_request_manager"/>

                        <button string="Cancelled" name="action_cancelled"
                                states="draft,print_rf,confirmed" type="object"
                                class="oe_highlight"
                                groups="mgc_request.group_request_employee,mgc_request.group_request_supervisor,mgc_request.group_request_manager"/>

                        <button string="Set to draft" name="action_retrieve"
                                states="cancelled" type="object"
                                class="oe_highlight"
                                groups="mgc_request.group_request_supervisor"/>

                        <button string="Void" name="action_void"
                                states="confirmed,done" type="object"
                                class="oe_highlight"
                                groups="mgc_request.group_request_manager"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,print_rf,cancelled,confirmed,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                                <button type="object" name="action_view_order" class="oe_stat_button"
                                        icon="fa-shopping-cart" attrs="{'invisible':[('state', 'in', ('draft','print_rf', 'void', 'confirmed')),('order_ids','=',[])]}">
                                    <field name="order_count" widget="statinfo" string="Purchases"/>
                                    <field name='order_ids' invisible="1"/>
                                </button>
                        </div>
                        <div class="oe_title">
                            <label for="request_number"/>
                            <h2><field name="request_number" nolabel="1" attrs="{'readonly':True}"/></h2>
                        </div>
                        <group>
                            <group>
                                <separator string="Requestor" colspan="2"/>
                                <field name="curre_user"/>
                                <field name="company_id" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])]}" options="{'no_create':True}"/>
                                <field name="department_id" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])]}" options="{'no_create':True}"
                                       domain="[('company_id', '=', company_id)]"/>
                                <field name="employee_id" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])]}" options="{'no_create':True}"
                                       domain="[('company_id', '=', company_id), ('department_id', '=', department_id)]"/>
                                 <field name="request_type_id" options="{'no_create':True,'no_open':True}"
                                       attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])]}"
                                       domain="[('department_id', '=', department_id)]"/>
                                <field name="request_type_line_id" options="{'no_create':True,'no_open':True}"
                                       attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])]}"
                                       domain="[('request_type_id', '=', request_type_id), ('request_type_id.department_id', '=', department_id)]"/>
                                <field name="journal_id" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])]}" options="{'no_create':True}"
                                       domain="[('company_id', '=', company_id)]"/>
                                <field name="internal_type" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="purpose" colspan="2" rowspan="4" placeholder="Please fill-out the purpose of your request."/>
                            </group>
                            <group>
                                <separator string="Request Through" colspan="2"/>
                                <field name="request_selection" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])]}" class="oe_edit_only" widget="radio"/>
                                <field name="partner_id" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])], 'invisible':[('request_selection', '=', 'company')], 'required':[('request_selection', '=', 'contacts')]}"/>
                                <field name="request_company_id" options="{'no_create':True}" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])], 'invisible':[('request_selection', '=', 'contacts')], 'required':[('request_selection', '=', 'company')]}"/>
                                <field name="request_department_id" options="{'no_create':True}" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])], 'invisible':[('request_selection', '=', 'contacts')], 'required':[('request_selection', '=', 'company')]}"
                                       domain="[('request_company_id', '=', request_company_id)]"/>
                                <field name="date_request" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])]}"/>
                                <field name="source_id" attrs="{'readonly':[('state', 'not in',['draft', 'print_rf', 'void'])]}"/>
                                <field name="abbreviation" invisible="1"/>
                                <field name="type_code" invisible="1"/>
                                <field name="notes" colspan="2" rowspan="4" placeholder="Take some of your special instruction as to follow your request."/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Request Board">
                                <field name="request_line" mode="tree" attrs="{'readonly': [('state', 'in', ['done','cancelled'])]}">
                                    <tree string="Request Lines" editable="bottom">
                                        <field name="request_id" invisible="1"/>
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="date_scheduled"/>
                                        <field name="account_id"/>
                                        <field name="unit_uom" options="{'no_create':True,'no_open':True}"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="purchase_id" invisible="1"/>
                                        <field name="taxes_id" widget="many2many_tags"/>
                                        <field name="price_subtotal" widget="monetary"/>
                                    </tree>
                                    <form string="Request Lines">
                                        <header>
                                            <field name="state" widget="statusbar"/>
                                        </header>
                                        <sheet>
                                            <!--<div class="oe_button_box" name="button_box">-->
                                                <!--<button type="object" name="action_view_order" class="oe_stat_button"-->
                                                        <!--icon="fa-shopping-cart" attrs="{'invisible':[('state', 'in', ['draft','print_rf', 'void', 'confirmed'])]}">-->
                                                    <!--<field name="order_lines" widget="statinfo" string="Purchases"/>-->
                                                <!--</button>-->
                                            <!--</div>-->
                                             <group>
                                                <group>
                                                    <field name="request_id" invisible="1"/>
                                                    <field name="product_id" readonly="1"/>
                                                    <field name="description" readonly="1"/>
                                                    <field name="account_id" readonly="1"/>
                                                    <field name="date_scheduled" readonly="1"/>
                                                    <field name="unit_uom" readonly="1"/>
                                                </group>
                                                <group>
                                                    <field name="quantity" readonly="1"/>
                                                    <field name="price_unit" readonly="1"/>
                                                    <field name="taxes_id" widget="many2many_tags" readonly="1"/>
                                                    <field name="company_id" readonly="1"/>
                                                    <field name="purchase_id" invisible="1"/>
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Order Lines">
                                                    <field name="order_lines"/>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="amount_total"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </page>
                            <page string="References">
                                <group>
                                    <group>
                                        <field name="order_status" attrs="{'readonly': [('state', 'in', ['done','cancelled'])], 'invisible':[('state', '!=', 'done')]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Approvals">
                                <field name="approver_ids" attrs="{'readonly': [('state', 'in', ['done','cancelled'])]}">
                                    <tree string="Approvals" editable="bottom">
                                        <field name="request_id" invisible="1"/>
                                        <field name="position_id" options="{'no_create':True}"/>
                                        <field name="employee_id" options="{'no_create':True}"/>
                                        <field name="is_approved"/>
                                    </tree>
                                    <form string="Approvals">
                                        <group>
                                            <group>
                                                <field name="request_id" invisible="1"/>
                                                <field name="position_id" options="{'no_create':True}" readonly="1"/>
                                                <field name="employee_id" options="{'no_create':True}" readonly="1"/>
                                                <field name="is_approved" readonly="1"/>
                                                <field name="is_approved" readonly="1"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--Asset Request Kanban-->
        <record model="ir.ui.view" id="request_kanban_view">
            <field name="name">Request Kanban</field>
            <field name="model">account.request</field>
            <field name="arch" type="xml">
                <kanban default_order="request_number">
                    <field name="request_number"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="company_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <!--<div class="codup_kanban_left">-->
                                    <!--<img t-att-src="kanban_image('res.company', 'logo', record.company_id.raw_value)" t-att-title="record.company_id.value" width="30" height="30" class="oe_kanban_avatar"/>-->
                                    <!--<img t-att-src="kanban_image('hr.employee', 'image', record.employee_id.raw_value)" t-att-title="record.employee_id.value" width="30" height="30" class="oe_kanban_avatar"/>-->
                                <!--</div>-->
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="request_number"/>
                                    </strong>
                                    <ul>
                                        <li><i><field name="employee_id"></field></i></li>
                                        <li><field name="department_id"></field></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="account_request_tree_view" model="ir.ui.view">
            <field name="name">account.request.tree.view</field>
            <field name="model">account.request</field>
            <field name="arch" type="xml">
                <tree string="My Request" decoration-primary="state == 'draft' or state == 'print_rf'" decoration-info="state == 'void'"
                      decoration-muted="state =='cancelled'" decoration-success="state =='confirmed'">
                    <field name="request_number"/>
                    <field name="date_request"/>
                    <field name="employee_id"/>
                    <field name="request_company_id"/>
                    <field name="request_department_id"/>
                    <field name="partner_id"/>
                    <field name="request_type_id"/>
                    <field name="amount_untaxed" sum="Total Untaxed amount" string="Untaxed" widget="monetary"/>
                    <field name="amount_total" sum="Total amount" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state"/>
                    <field name="order_status"/>
                </tree>
            </field>
        </record>


        <record id="account_request_filter_view" model="ir.ui.view">
            <field name="name">account.request.filter</field>
            <field name="model">account.request</field>
            <field name="arch" type="xml">
                <search string="Request Lines">
                    <field name="request_number" string="Request Number"/>
                    <field name="employee_id" string="Requestor"/>
                    <field name="company_id" string="Company"/>
                    <field name="department_id" string="Branch / Department"/>
                    <field name="request_company_id"/>
                    <field name="request_department_id"/>
                    <field name="request_type_id" string="Request Type"/>
                    <field name="state" string="Status"/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Print RF" name="print_rf" domain="[('state','=','print_rf')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state','=','cancelled')]"/>
                    <filter string="Confirmed" name="confirm" domain="[('state','=','confirmed')]"/>
                    <filter string="Done" name="done" domain="[('state','=','done')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" icon="terp-personal" domain="[]" context="{'group_by':'company_id'}"/>
                        <filter string="Department" icon="terp-personal" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter string="Request Through Company" icon="terp-personal" domain="[]" context="{'group_by':'request_company_id'}"/>
                        <filter string="Request Through Department" icon="terp-personal" domain="[]" context="{'group_by':'request_department_id'}"/>
                        <filter string="Type" icon="terp-personal" domain="[]" context="{'group_by':'request_type_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="account_request_action_view" model="ir.actions.act_window">
            <field name="name">My Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.request</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_type">form</field>
            <field name="domain">[('employee_id.user_id','=',uid)]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Make your own request!
              </p>
            </field>
        </record>

        <!--Branch / Department Request-->
        <record id="account_request_department_action_view" model="ir.actions.act_window">
            <field name="name">Other Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.request</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="account_request_filter_view"/>
            <field name="view_id" ref="account_request_tree_view"/>
        </record>

        <!--To Approve-->
        <record id="account_request_to_approve_filter_view" model="ir.ui.view">
            <field name="name">account.request.filter1</field>
            <field name="model">account.request</field>
            <field name="arch" type="xml">
                <search string="Request Lines">
                    <field name="request_number" string="Request Number" domain="[('active', '=', True)]"/>
                    <field name="employee_id"/>
                    <field name="company_id"/>
                    <field name="department_id"/>
                    <field name="request_company_id"/>
                    <field name="request_department_id"/>
                    <field name="request_type_id"/>
                    <field name="state"/>
                    <filter string="Purchase" name="purchase" domain="[('request_type_id.type','=','purchase')]"/>
                    <filter string="Cash" name="cash" domain="[('request_type_id.type','=','cash')]"/>
                    <filter string="Payment" name="payment" domain="[('request_type_id.type','=','payment')]"/>
                    <filter string="Repair" name="repair" domain="[('request_type_id.type','=','repair')]"/>
                    <filter string="Other Request" name="others" domain="[('request_type_id.type','=','others')]"/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Print RF" name="print_rf" domain="[('state','=','print_rf')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state','=','cancelled')]"/>
                    <filter string="Confirmed" name="confirm" domain="[('state','=','confirmed')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" icon="terp-personal" domain="[]" context="{'group_by':'company_id'}"/>
                        <filter string="Department" icon="terp-personal" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter string="Request Through Company" icon="terp-personal" domain="[]" context="{'group_by':'request_company_id'}"/>
                        <filter string="Request Through Department" icon="terp-personal" domain="[]" context="{'group_by':'request_department_id'}"/>
                        <filter string="Type" icon="terp-personal" domain="[]" context="{'group_by':'request_type_id'}"/>
                    </group>
                </search>
            </field>
        </record>

