<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <!--Asset Group Security and User Access View -->
        <record id="module_category_payable_and_disbursement" model="ir.module.category">
            <field name="name">Payable and Disbursement</field>
            <field name="sequence">2</field>
        </record>

        <!--Employee Access-->
        <record id="group_payable_clerk" model="res.groups">
            <field name="name">Payable Clerk</field>
            <field name="category_id" ref="module_category_payable_and_disbursement"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!--Purchase Supervisory Access-->
        <record id="group_payable_supervisor" model="res.groups">
            <field name="name">Payable Supervisor</field>
            <field name="category_id" ref="module_category_payable_and_disbursement"/>
            <field name="implied_ids" eval="[(4, ref('group_payable_clerk'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_payable_tax_supervisor" model="res.groups">
