        </record>

        <!--Managerial Access-->
        <record id="group_disbursement_clerk" model="res.groups">
            <field name="name">Disbursement Clerk</field>
            <field name="category_id" ref="module_category_payable_and_disbursement"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <!--Treasury Access-->
        <record id="group_disbursement_supervisor" model="res.groups">
            <field name="name">Disbursement Supervisor</field>
            <field name="category_id" ref="module_category_payable_and_disbursement"/>
            <field name="implied_ids" eval="[(4, ref('group_disbursement_clerk'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
